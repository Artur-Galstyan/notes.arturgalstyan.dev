---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
import "@fontsource/fira-mono";
---

<html lang="en" data-theme="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{Astro.props.frontmatter.title}</title>
        <meta property="og:title" content={Astro.props.frontmatter.title} />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
        />
        <Analytics />
    </head>

    <body class="bg-base-100 text-base-content">
        <div class="mx-auto px-4 py-8 w-full">
            <Navbar />
        </div>
        <div class="flex justify-center w-[90%] mx-auto">
            <article class="prose w-full">
                <slot />
            </article>
        </div>
        <div class="h-[10rem]"></div>
        <script
            src="https://utteranc.es/client.js"
            repo="Artur-Galstyan/notes.arturgalstyan.dev"
            issue-term="og:title"
            label="comment ðŸ’¬"
            theme="github-dark"
            crossorigin="anonymous"
            async></script>
        <div class="h-[25rem]"></div>
    </body>
</html>
